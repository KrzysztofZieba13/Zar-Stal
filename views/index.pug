extends base



mixin testimonial(imgSrc)
  img.client-logo(src=imgSrc alt='logo firmy która zaufała')

mixin companyInfoCart(cartIcon, cartTitle, cartDescription)
  .info-detail
    .info-icon 
      i.ph.ph-=`${cartIcon}`
    p.info-name= cartTitle
    p.info-description!= cartDescription


mixin contactElement(icon, subInfo, mainInfo)
  .contact-element 
    i.ph.icon-contact.ph-=`${icon}`
    span.contact--sub-info= subInfo
    p.contact--main-info= mainInfo

block append head 
  link(rel='stylesheet' href='/css/style.css')
  link(rel='stylesheet' href='/css/queries/queries.css')


block content
  header.overview-header
    .hero 
      .hero--text-box
        h1.primary-header.hero-header ZAR-STAL <br> KONSTRUKCJE STALOWE
        p.hero-text Specjalizuje się w produkcji konstrukcji stalowych, elementów stalowych, świetlików kalenicowych, kontenerów, hal magazynowych, produkcyjnych, sportowych czy rolniczych. Produkujemy, dostarczamy oraz montujemy konstrukcje w Polsce i za granicą.
        .hero-btns 
          a.btn.btn-realization.link(href='#realizacje') REALIZACJE
          a.btn.btn-offert.link(href='#oferta') OFERTA

  ///////////////////////////////////////////
  ///////////////TESTIMONIALS////////////////
  ///////////////////////////////////////////


  section.section-testimonials
    .container
      p.trusted-us Zaufali Nam
      .clients-logo
        +testimonial('../img/clients-logo/logo1.png')
        +testimonial('../img/clients-logo/logo2.png')
        +testimonial('../img/clients-logo/logo3.png')
        +testimonial('../img/clients-logo/logo4.png')
        +testimonial('../img/clients-logo/logo5.png')
  //////////////////////////////////////
  ///////////////COMPANY////////////////
  //////////////////////////////////////
  section.section-company#firma
    .container 
      span.subtitle firma
      h2.secondary-header Dlaczego My?
      .company-info
        +companyInfoCart('gear', 'Doświadczenie', 'Posiadamy duże doświadczenie, dysponujemy wykwalifikowanym zespołem spawaczy i&nbsp;monterów dlatego wykonywane przez nas usługi są najwyższej jakości')
        +companyInfoCart('certificate', 'Certyfikat', 'Posiadamy certyfikat zarządzania jakością zgodnie z&nbsp;normą ISO 9001, dzięki czemu nasze wyroby wyróżnia trwałość i&nbsp;solidność.')
        +companyInfoCart('seal-check', 'Gwarancja', 'Gwarantujemy generalne wykonawstwo od tworzenia projektów wykonawczych aż po oddanie obiektu do użytku, zgodnie z&nbsp;oczekiwaniami klientów.')
        +companyInfoCart('clock-countdown', 'Terminowość', 'Wyjątkową wagę przykładamy do terminowego zakończenia prac, jednocześnie dbając o&nbsp;każdy szczegół, aby klient był zadowolony z&nbsp;efektu końcowego.')
        +companyInfoCart('shield-check', 'Bezpieczeństwo', 'Stosujemy się do wszelkich wytycznych i&nbsp;norm, dbamy o&nbsp;bezpieczeństwo naszych konstrukcji, zapewniając ich trwałość i&nbsp;niezawodność.')
        +companyInfoCart('sketch-logo', 'Najwyższa Jakość', 'Stosujemy wyłącznie materiały najwyższej jakości, które są atestowane i&nbsp;certyfikowane, co zapewnia długowieczność i&nbsp;solidność naszych konstrukcji.')
  //////////////////////////////////////
  ////////////REALIZATIONS//////////////
  //////////////////////////////////////
  section.section-realizations#realizacje 
    .container 
      span.subtitle realizacje
      h2.secondary-header Nasze Realizacje

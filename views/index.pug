extends base

block append head
  link(rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css" integrity="sha256-p4NxAoJBhIIN+hmNHrzRCf9tD/miZyoHS5obTRR9BMY=" crossorigin="")
  meta(name="description", content="Zar-Stal Konstrukcje Stalowe – Specjalizujemy się w produkcji konstrukcji stalowych, elementów stalowych, świetlików kalenicowych, kontenerów, hal magazynowych, produkcyjnych, sportowych czy rolniczych. Produkujemy, dostarczamy oraz montujemy konstrukcje w Polsce i za granicą.")
  script(src="https://www.google.com/recaptcha/api.js" async defer)


mixin testimonial(imgSrc)
  img.client-logo(src=imgSrc alt='logo firmy która zaufała')

mixin companyInfoCart(cartIcon, cartTitle, cartDescription)
  .info-detail
    .info-icon 
      i.ph.ph-=`${cartIcon}`
    p.info-name= cartTitle
    p.info-description!= cartDescription


mixin contactElement(icon, subInfo, mainInfo)
  .contact-element 
    i.ph.icon-contact.ph-=`${icon}`
    span.contact--sub-info= subInfo
    p.contact--main-info= mainInfo

block append head 
  link(rel='stylesheet' href='/css/style.css')
  link(rel='stylesheet' href='/css/queries/queries.css')
  title Zar-Stal | Konstrukcje Stalowe


block content
  header.overview-header.intersection-header
    .hero 
      .hero--text-box
        h1.primary-header.hero-header ZAR-STAL <br> KONSTRUKCJE STALOWE
        p.hero-text Specjalizuje się w produkcji konstrukcji stalowych, elementów stalowych, świetlików kalenicowych, kontenerów, hal magazynowych, produkcyjnych, sportowych czy rolniczych. Produkujemy, dostarczamy oraz montujemy konstrukcje w Polsce i za granicą.
        .hero-btns 
          a.btn.btn-realization.link(href='#realizacje') REALIZACJE
          a.btn.btn-offert.link(href='#oferta') OFERTA
    img.img--bg-preloading.hidden

  ///////////////////////////////////////////
  ///////////////TESTIMONIALS////////////////
  ///////////////////////////////////////////


  section.section-testimonials
    .container
      p.trusted-us Zaufali Nam
      .clients-logo
        +testimonial('../img/clients-logo/logo1.png')
        +testimonial('../img/clients-logo/logo2.png')
        +testimonial('../img/clients-logo/logo3.png')
        +testimonial('../img/clients-logo/logo4.png')
        +testimonial('../img/clients-logo/logo5.png')
  //////////////////////////////////////
  ///////////////COMPANY////////////////
  //////////////////////////////////////
  section.section.section-company.section--hidden#firma
    .container 
      span.subtitle firma
      h2.secondary-header Dlaczego My?
      .company-info
        +companyInfoCart('gear', 'Doświadczenie', 'Posiadamy duże doświadczenie, dysponujemy wykwalifikowanym zespołem spawaczy i&nbsp;monterów dlatego wykonywane przez nas usługi są najwyższej jakości')
        +companyInfoCart('certificate', 'Certyfikat', 'Posiadamy certyfikat zarządzania jakością zgodnie z&nbsp;normą ISO 9001, dzięki czemu nasze wyroby wyróżnia trwałość i&nbsp;solidność.')
        +companyInfoCart('seal-check', 'Gwarancja', 'Gwarantujemy generalne wykonawstwo od tworzenia projektów wykonawczych aż po oddanie obiektu do użytku, zgodnie z&nbsp;oczekiwaniami klientów.')
        +companyInfoCart('clock-countdown', 'Terminowość', 'Wyjątkową wagę przykładamy do terminowego zakończenia prac, jednocześnie dbając o&nbsp;każdy szczegół, aby klient był zadowolony z&nbsp;efektu końcowego.')
        +companyInfoCart('shield-check', 'Bezpieczeństwo', 'Stosujemy się do wszelkich wytycznych i&nbsp;norm, dbamy o&nbsp;bezpieczeństwo naszych konstrukcji, zapewniając ich trwałość i&nbsp;niezawodność.')
        +companyInfoCart('sketch-logo', 'Najwyższa Jakość', 'Stosujemy wyłącznie materiały najwyższej jakości, które są atestowane i&nbsp;certyfikowane, co zapewnia długowieczność i&nbsp;solidność naszych konstrukcji.')
  //////////////////////////////////////
  ////////////REALIZATIONS//////////////
  //////////////////////////////////////
  section.section.section-realizations.section--hidden#realizacje 
    .container 
      span.subtitle realizacje
      h2.secondary-header Nasze Realizacje
      .realizations-box 
        img.realization-img.lazy-img(src=`../img/realization/${mainPage.mainRealizations[0].primaryImageThumbnail}` data-src=`../img/realization/${mainPage.mainRealizations[0].primaryImage}` alt="zdjęcie realizacji konstrukcji stalowej przez Zar-Stal")
        .realization-desc
          h3.third-header Okręgowa Stacja Kontroli Pojazdów
          p.text Nowoczesny budynek wykonany z konstrukcji stalowej, posiada przestronny układ z dużymi bramami wjazdowymi, umożliwiającymi wygodny dostęp pojazdów do wnętrza. Hala przystosowana do wykonywania przeglądów technicznych pojazdów, spełniając wszystkie wymagania techniczne i bezpieczeństwa.
          a(href=`/realizacje/realizacja/${mainPage.mainRealizations[0]._id}`).btn.link.btn--see-realization Zobacz Realizację
        .realization-desc
          h3.third-header Hala Naprawy <br> i konserwacji maszyn
          p.text Hala przeznaczona do naprawy oraz konserwacji maszyn. Budynek składa się z dużej, głównej części warsztatowej z wieloma bramami wjazdowymi, co umożliwia jednoczesne serwisowanie wielu maszyn.
          a(href=`/realizacje/realizacja/${mainPage.mainRealizations[1]._id}`).btn.link.btn--see-realization Zobacz Realizację
        img.realization-img.lazy-img(src=`../img/realization/${mainPage.mainRealizations[1].primaryImageThumbnail}` data-src=`../img/realization/${mainPage.mainRealizations[1].primaryImage}` alt="zdjęcie realizacji konstrukcji stalowej przez Zar-Stal")
      a(href='/realizacje').btn.link.btn--see-morerealizations Zobacz Więcej Realizacji
    img(src='../img/crane-bg.png' alt='dźwig w tle').crane-bg
  ////////////////////////////////
  ////////////OFFERT//////////////
  ////////////////////////////////
  section.section.section-offert.section--hidden#oferta
    .container 
      span.subtitle oferta
      h2.secondary-header Nasza Oferta
      .offert-grid
        .offert-item 
          img(src="../img/offert/oferta1.jpg", alt="Zdjęcie przedstawiające ofertę Zar-Stal") 
          p.offert-title Konstrukcje Stalowe
          p.offert-details.hidden= mainPage.offert[0]
        .offert-item 
          img(src="../img/offert/oferta2.jpg", alt="Zdjęcie przedstawiające ofertę Zar-Stal") 
          p.offert-title Elementy Stalowe <br> ogrodzenia
          p.offert-details.hidden= mainPage.offert[1]
        .offert-item 
          img(src="../img/offert/oferta3.jpg", alt="Zdjęcie przedstawiające ofertę Zar-Stal") 
          p.offert-title Kontenery
          p.offert-details.hidden= mainPage.offert[2]
        .offert-item 
          img(src="../img/offert/oferta4.jpg", alt="Zdjęcie przedstawiające ofertę Zar-Stal") 
          p.offert-title Świetliki Kalenicowe
          p.offert-details.hidden= mainPage.offert[3]
        .offert-item 
          img(src="../img/offert/oferta5.jpg", alt="Zdjęcie przedstawiające ofertę Zar-Stal") 
          p.offert-title Hale magazynowe <br> rolnicze <br> i produkcyjne
          p.offert-details.hidden= mainPage.offert[4]
        .offert-item 
          img(src="../img/offert/oferta6.jpg", alt="Zdjęcie przedstawiające ofertę Zar-Stal") 
          p.offert-title Hale sportowe
          p.offert-details.hidden= mainPage.offert[5]
  /////////////////////////////////
  ////////////CONTACT//////////////
  /////////////////////////////////
  section.section.section-contact.section--hidden#kontakt
    .container 
      span.subtitle kontakt
      h2.secondary-header Skontaktuj Się
      .contact-panel 
        .contact--left-col
          img.contact-logo(src='../img/logoContact.png' alt='logo Zar-Stal')
          .contact-box
            +contactElement('map-pin', 'Miejscowość', 'Wylewa, 244a')
            +contactElement('phone', 'Właściciel', '504 200 637')
            +contactElement('phone', 'Kierownik Produkcji', '502 307 540')
            +contactElement('phone', 'Sekretariat', '786 801 755')
            +contactElement('envelope-simple', 'Email', 'biuro@zar-stal.pl')
            .contact-element 
              i.ph.ph-clock.icon-contact
              span.contact--sub-info Godziny Otwarcia
              .contact--main-info.last-contact 
                .openhours 
                  span pn-pt
                  span 06:00-16:00 
                .openhours 
                  span sb 
                  span 06:00-13:00 
                .openhours
                  span nd 
                  span nieczynne
        .contact--right-col
          h3.contact-header Napisz do nas
          form.form-contact
            input#contact-name.input-contact(type='text' placeholder='Imię i nazwisko / Firma')
            input#contact-email.input-contact(type='email' placeholder='Email')
            input#contact-phone.input-contact(type='tel' placeholder='Telefon')
            input#full-name.input-contact(type='text' placeholder='Pełne imie')
            textarea#contact-message.textarea-contact(name="message" placeholder='Treść wiadomości')
            .g-recaptcha(data-sitekey="6LduryUqAAAAAJ45yAMYN91eVC5Q09GAO-KR2MUJ")
            input#contact-submit.input-submit(type="submit" value='Wyślij wiadomość')
    img(src='../img/construction-bg.png' alt='konstrukcja w tle').construction-bg
  #map
    .make-route 
      
      a.link(href='https://maps.app.goo.gl/vK6gudVaf39LNmNL8')
        span 
          i.ph.ph-map-trifold
        |Wyznacz Trasę 
        
  
      a(href='/realizacje').btn.link.btn--see-morerealizations Zobacz Więcej Realizacji
    img(src='../img/crane-bg.png').construction-bg
  ////////////////////////////////
  ////////////OFFERT//////////////
  ////////////////////////////////
  section.section-offert#oferta
    .container 
      span.subtitle oferta
      h2.secondary-header Nasza Oferta
      .offert-grid
        .offert-item 
          img(src="../img/offert/oferta1.png", alt="Zdjęcie przedstawiające ofertę Zar-Stal") 
          p Konstrukcje Stalowe
        .offert-item 
          img(src="../img/offert/oferta2.jpg", alt="Zdjęcie przedstawiające ofertę Zar-Stal") 
          p Elementy Stalowe
        .offert-item 
          img(src="../img/offert/oferta3.jpg", alt="Zdjęcie przedstawiające ofertę Zar-Stal") 
          p Kontenery
        .offert-item 
          img(src="../img/offert/oferta4.jpg", alt="Zdjęcie przedstawiające ofertę Zar-Stal") 
          p Świetliki Kalenicowe
        .offert-item 
          img(src="../img/offert/oferta5.jpg", alt="Zdjęcie przedstawiające ofertę Zar-Stal") 
          p Hale magazynowe <br> rolnicze <br> i produkcyjne
        .offert-item 
          img(src="../img/offert/oferta6.jpg", alt="Zdjęcie przedstawiające ofertę Zar-Stal") 
          p Hale sportowe
  /////////////////////////////////
  ////////////CONTACT//////////////
  /////////////////////////////////
  section.section-contact#kontakt
    .container 
      span.subtitle kontakt
      h2.secondary-header Skontaktuj Się
      .contact-panel 
        .contact--left-col
          img.contact-logo(src='../img/logoContact.png' alt='logo Zar-Stal')
          .contact-box
            +contactElement('map-pin', 'Miejscowość', 'Wylewa, 244a')
            +contactElement('phone', 'Właściciel', '504 200 637')
            +contactElement('phone', 'Kierownik Produkcji', '502 307 540')
            +contactElement('phone', 'Sekretariat', '786 801 755')
            +contactElement('envelope-simple', 'Email', 'biuro@zar-stal.pl')
            .contact-element 
              i.ph.ph-clock.icon-contact
              span.contact--sub-info Godziny Otwarcia
              .contact--main-info.last-contact 
                .openhours 
                  span pn-pt
                  span 06:00-16:00 
                .openhours 
                  span sb 
                  span 06:00-13:00 
                .openhours
                  span nd 
                  span nieczynne
        .contact--right-col
          h3.contact-header Napisz do nas
          form.form-contact
            input#contact-name.input-contact(type='text' placeholder='Imię i nazwisko / Firma')
            input#contact-email.input-contact(type='email' placeholder='Email')
            input#contact-phone.input-contact(type='tel' placeholder='Telefon')
            textarea#contact-message.textarea-contact(name="message" placeholder='Treść wiadomości')
            input#contact-submit.input-submit(type="submit" value='Wyślij wiadomość')
    img(src='../img/construction-bg.png').construction-bg
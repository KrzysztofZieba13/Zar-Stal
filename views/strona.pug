    /////////////////////////////////
    ////////////CONTACT//////////////
    /////////////////////////////////
    section.section-contact
      .container 
        span.subtitle kontakt
        h2.secondary-header Skontaktuj Się
        .contact-panel 
          .contact--left-col
            img.contact-logo(src='../img/logoContact.png' alt='logo Zar-Stal')
            .contact-box
              .contact-element 
                i.ph.ph-map-pin.icon-contact
                span.contact--sub-info Miejscowość
                p.contact--main-info Wylewa, 244a
              .contact-element 
                i.ph.ph-phone.icon-contact
                span.contact--sub-info Właściciel
                p.contact--main-info 504 200 637
              .contact-element 
                i.ph.ph-phone.icon-contact
                span.contact--sub-info Kierownik Produkcji
                p.contact--main-info 502 307 540
              .contact-element 
                i.ph.ph-phone.icon-contact
                span.contact--sub-info Sekretariat
                p.contact--main-info 786 801 755
              .contact-element 
                i.ph.ph-envelope-simple.icon-contact
                span.contact--sub-info Email
                p.contact--main-info biuro@zar-stal.pl
              .contact-element 
                i.ph.ph-clock.icon-contact
                span.contact--sub-info Godziny Otwarcia
